<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ToyViewActivity">

    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10sp"
            android:id="@+id/backarrow1"
            android:src="@drawable/arrow_left" />

        <Button
            android:layout_width="40sp"
            android:layout_height="25sp"
            android:layout_gravity="center"
            android:layout_marginStart="80sp"
            android:backgroundTint="#9C9C9C" />

        <Button
            android:layout_width="60sp"
            android:layout_height="30sp"
            android:layout_gravity="center"
            android:layout_marginStart="10sp"
            android:backgroundTint="#03A9F4" />

        <Button
            android:layout_width="40dp"
            android:layout_height="25sp"
            android:layout_gravity="center"
            android:layout_marginStart="10sp"
            android:backgroundTint="#9C9C9C" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/layout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/layout1"
        android:layout_margin="20sp">

        <ImageView
            android:id="@+id/toyimg"
            android:layout_width="250sp"
            android:layout_height="250sp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10sp"
            android:scaleType="centerCrop"
             />

        <TextView
            android:id="@+id/txttoy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/toyimg"
            android:layout_marginStart="20sp"
            android:layout_marginTop="10sp"
            android:text="Toy"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/txttoyname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txttoy"
            android:layout_marginStart="20sp"
            android:hint="Toy"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/txttoyamount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txttoyname"
            android:layout_marginStart="20sp"
            android:layout_marginTop="10sp"
            android:hint="Amount"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/avlcolor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txttoyamount"
            android:layout_marginStart="20sp"
            android:text="AVAILABLE COLORS" />

        <LinearLayout
            android:id="@+id/l1blue"
            android:layout_width="25sp"
            android:layout_height="25sp"
            android:layout_below="@+id/avlcolor"
            android:layout_marginStart="25sp"
            android:layout_marginTop="5sp"
            android:background="#1D6178"
            android:orientation="horizontal" />

        <LinearLayout
            android:id="@+id/l1green"
            android:layout_width="25sp"
            android:layout_height="25sp"
            android:layout_toEndOf="@id/l1blue"
            android:layout_below="@id/avlcolor"
            android:layout_marginStart="25sp"
            android:layout_marginTop="5sp"
            android:background="#4CAF50"
            android:orientation="horizontal" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="ADD TO CART"
            android:backgroundTint="#03A9F4"/>

    </RelativeLayout>

</RelativeLayout>